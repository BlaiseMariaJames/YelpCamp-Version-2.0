<% layout('/layouts/BoilerPlate') %>
    <div class="container d-flex justify-content-center align-items-center">
        <div class="row">
            <div class="col-12" style="min-width: 40dvw;">
                <div class="card shadow">
                    <img src="https://res.cloudinary.com/dtwgxcqkr/image/upload/v1700923361/YelpCamp%20Related%20Media/qix32ktkzhlqfxvu7v4q.avif"
                        class="card-img-top" style="max-height: 50dvh;" crossorigin />
                    <div class="card-body">
                        <h3 class="card-title">Forgot Password?</h3>
                        <p class="my-3 mandatory">* Mandatory Fields</p>
                        <form action="/forgot-password?_method=PATCH" method="post" class="needs-validation" novalidate>
                            <div class="mt-3">
                                <label for="email" class="form-label">Enter Email to send verification code<span class="mandatory">*</span> : </label>
                                <input type="email" class="form-control" name="email" id="email" autofocus
                                    placeholder="Enter Email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please provide a valid email.
                                </div>
                            </div>
                            <div class="d-grid mt-3">
                                <button type="submit" class="btn btn-danger">Reset Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>