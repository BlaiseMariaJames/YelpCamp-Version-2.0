<% layout('/layouts/BoilerPlate') %>
    <div class="d-flex align-items-center gap-3">
        <h1><%=user.name%></h1>
        <h2>@(<%=user.username%>)</h2>
    </div>
    <hr>
    <div class="row d-flex justify-content-center">
        <div class="col-lg-4 mb-3 mb-lg-0">
            <div class="card shadow" style="height: 100%;">
                <div class="card-body">
                    <h3 class="card-title">Edit Profile</h3>
                    <p class="my-3 mandatory">* Mandatory Fields</p>
                    <form action="/profile?_method=PATCH" method="post" class="needs-validation" novalidate>
                        <label class="mt-3"><b>Edit My Name: </b></label>
                        <div class="mt-3 d-none">
                            <label for="username" class="form-label">Username <span class="mandatory">*</span> : </label>
                            <input type="text" class="form-control" name="username" id="username"
                                placeholder="Enter username" value="<%=user.username%>">
                        </div>
                        <div class="mt-3 d-none">
                            <label for="email" class="form-label">Email<span class="mandatory">*</span> : </label>
                            <input type="email" class="form-control" name="email" id="email"
                                placeholder="Enter email" value="<%=user.email%>">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid email.
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="name" class="form-label">Enter Name<span class="mandatory">*</span> : </label>
                            <input type="text" class="form-control" name="name" id="name" value="<%=user.name%>"
                                placeholder="Enter name" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid name.
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="password" class="form-label">Enter Current Password (is required to update profile)<span class="mandatory">*</span> : </label>
                            <input type="password" class="form-control" name="password" id="password"
                                placeholder="Enter current password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid password.
                            </div>
                        </div>
                        <label class="mt-5"><b>Change My Current Password: </b></label>
                        <div class="mt-3">
                            <label for="newPassword" class="form-label">Enter New Password (Optional) : </label>
                            <input type="password" class="form-control" name="newPassword" id="newPassword"
                                placeholder="Enter new password">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Passwords don't match.
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="confirmPassword" class="form-label">Confirm Password (is required to update current password)<span class="mandatory">*</span> : </label>
                            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                                placeholder="Confirm password">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Passwords don't match.
                            </div>
                        </div>
                        <div class="d-grid mt-3 gap-2">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <button type="reset" class="btn btn-danger">Reset</button>
                            <a href="/users/<%=user.username%>" class="btn btn-secondary">Go back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body d-flex flex-column">
                    <% if(!error) { %>
                    <% const options={ "Latest" : { sortBy: "latest" }, "Top Rated" : { sortBy: "top-rated" } }; %>
                        <div class="my-2 ms-auto">
                            <label class="form-label">Sort results by: </label>
                            <select class="form-select-sm categories" name="categories">
                                <% for(let option in options) { %>
                                    <option value="<%=option%>" <%=(options[option].sortBy.toLowerCase()==="latest" ) ? "selected" : "" %>><%=option%></option>
                                    <% } %>
                            </select>
                        </div>
                        <h3 class="card-title">My <span id="heading">Latest</span> Campgrounds</h3>
                        <hr>
                        <% for(let camp in campgrounds) { %>
                            <div class="d-flex flex-row justify-content-start gap-4 p-4 campground wrapper <%=(camp === "latest") ? "" : " d-none" %>" id="<%=camp%>">
                                    <% for (let campground of campgrounds[camp]) { %>
                                        <% let campgroundBackgroundImageURL=(campground.images.length>0) ? (campground.images[0].url).substr(0, 49) + "/o_35/" + (campground.images[0].url).substr(49) : "" %>
                                            <div class="card view" style="background-image: url(<%=campgroundBackgroundImageURL%>); background-size: cover;">
                                                <div class="col d-flex flex-column justify-content-between">
                                                    <div class="row">
                                                        <div class="card-body d-flex flex-column px-4">
                                                            <h4 class="ms-auto"><i class="fa-solid fa-flip fa-star" style="color: #ffd700;"></i>
                                                                <%=campground.avgRating%> (<%=campground.reviews.length%>)
                                                            </h4>
                                                            <h1 class="card-title">
                                                                <%=campground.title%>
                                                            </h1>
                                                            <div class="card-text">
                                                                <small class="text-muted">
                                                                    <%=campground.location%>
                                                                </small>
                                                                <p class="mt-3">
                                                                    <b>Price:</b> Rs.
                                                                    <%=campground.price%>/-
                                                                </p>
                                                                <p class="mt-3 text-justify">
                                                                    <%= (campground.description) ? campground.description.slice(0, 100) + "..." : "" %>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row text-center pb-3 px-5">
                                                        <a href="/campgrounds/<%=campground._id%>" class="card-link btn btn-outline-dark btn-sm" title="View Campground">View</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                            </div>
                            <% } %>
                        <% } else { %>
                            <h3 class="card-title">My Campgrounds</h3>
                            <hr>
                            <%- include('../partials/NotFound') %>
                            <% } %>
                </div>
            </div>
        </div>
    </div>
    <script src="/JS/Sort Campgrounds.js"></script>