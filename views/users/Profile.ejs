<% layout('/layouts/BoilerPlate') %>
    <div class="d-flex flex-wrap">
        <div class="d-flex flex-wrap align-items-center gap-4">
            <img src="<%=user.image.profile%>" class="logo" alt="Userphoto">
            <div class="d-flex flex-column me-3">
                <h3><%=user.name%></h3>
                <h5>@(<%=user.username%>)</h5>
                <% if(user.bio) { %>
                    <p><%=user.bio%></p>
                    <% } %>
                </div>
            </div>
            <div class="d-flex ms-sm-auto">
                <form action="/logout" method="post" class="align-self-center">
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
                <a href="/campgrounds" class="ms-3 align-self-center btn btn-secondary">Go back</a>
            </div>
        </div>
    </div>   
    <hr>
    <div class="row d-flex justify-content-center">
        <div class="col-lg-4 mb-3 mb-lg-0">
            <div class="card shadow" style="height: 100%;">
                <div class="card-body">
                    <h3 class="card-title">Edit Profile</h3>
                    <p class="my-3 mandatory">* Mandatory Fields</p>
                    <form action="/profile?_method=PATCH" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                        <label class="mt-3"><b>Edit My Profile: </b></label>
                        <div class="mt-3">
                            <label for="name" class="form-label">Edit Name<span class="mandatory">*</span> : </label>
                            <input type="text" class="form-control" name="name" id="name" value="<%=user.name%>"
                                placeholder="Enter name" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid name.
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="bio" class="form-label">Edit Bio (Optional) : </label>
                            <input type="text" class="form-control" name="bio" id="bio" value="<%=user.bio%>"
                                placeholder="Enter bio">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid bio.
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="image" class="form-label">Replace Profile Photo : </label>
                            <input type="file" class="form-control" name="image" id="image"
                                accept="image/avif, image/gif, image/jpg, image/jpeg, image/png, image/webp">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mt-4 form-check form-switch">
                            <label for="deleteImage" class="form-label">Or Toggle to Delete Profile Photo</label>
                            <input type="checkbox" role="switch" name="deleteImage" id="deleteImage" class="form-check-input" value="<%=user.image.filename%>">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <label class="mt-5"><b>Change My Current Password: </b></label>
                        <div class="mt-3">
                            <label class="form-label">Password Instructions:</label>
                            <div class="card-footer border-0">
                                <p>
                                    <b>Password Example:</b> Abcd@123
                                </p>
                                <ul>
                                    <li>Must be at least 8 to 15 characters long.</li>
                                    <li>Should include a mix of uppercase and lowercase letters.</li>
                                    <li>Must include at least one digit (0-9).</li>
                                    <li>Must include at least one special character from @$!%*?&.</li>
                                    <li>Avoid using easily guessable information, such as your username or common words.</li>
                                </ul>
                                <p>
                                    <b>Note:</b> Ensure your password is strong and not easily guessable. Do not use the same password across multiple accounts.
                                </p>
                            </div>
                        </div>
                        <div class="mt-3 password">
                            <label for="newPassword" class="form-label">Enter New Password (Optional) : </label>
                            <input type="password" class="form-control" name="newPassword" id="newPassword"
                                placeholder="Enter new password">
                            <img src="https://res.cloudinary.com/dtwgxcqkr/image/upload/v1701142131/YelpCamp%20Related%20Media/zkvg4rxknhwuebgnmd6v.jpg"
                                class="togglePassword">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Passwords don't match, try again.
                            </div>
                        </div>
                        <div class="mt-3 password">
                            <label for="confirmPassword" class="form-label">Confirm Password : </label>
                            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                                placeholder="Confirm password">
                            <img src="https://res.cloudinary.com/dtwgxcqkr/image/upload/v1701142131/YelpCamp%20Related%20Media/zkvg4rxknhwuebgnmd6v.jpg"
                                class="togglePassword">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Passwords don't match, try again.
                            </div>
                            <label class="form-label mt-2"><span class="mandatory">*</span> confirm password is required to change password.</label>
                        </div>
                        <label class="mt-5"><b>Confirm Changes (is required to update profile or change password) : </b></label>
                        <div class="mt-3 password">
                            <label for="password" class="form-label">Enter Current Password<span class="mandatory">*</span> : </label>
                            <input type="password" class="form-control" name="password" id="password"
                                placeholder="Enter current password" required>
                            <img src="https://res.cloudinary.com/dtwgxcqkr/image/upload/v1701142131/YelpCamp%20Related%20Media/zkvg4rxknhwuebgnmd6v.jpg"
                                class="togglePassword">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid password.
                            </div>
                        </div>
                        <div class="mt-2 d-flex flex-column">
                            <label class="form-label ms-auto"><a href="/forgot-password" style="text-decoration: none;">Forgot Password?</a></label>
                        </div>
                        <div class="d-grid mt-3 gap-2">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <button type="reset" class="btn btn-danger">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card shadow"
                <% if(!error) { %>
                    style="height:100%;"
                    <% } %>
            >
                <div class="card-body d-flex flex-column">
                    <% if(!error) { %>
                    <% const options={ "Latest" : { sortBy: "latest" }, "Top Rated" : { sortBy: "top-rated" } }; %>
                        <div class="my-2 ms-auto">
                            <label class="form-label">Sort results by: </label>
                            <select class="form-select-sm categories" name="categories">
                                <% for(let option in options) { %>
                                    <option value="<%=option%>" <%=(options[option].sortBy.toLowerCase()==="latest" ) ? "selected" : "" %>><%=option%></option>
                                    <% } %>
                            </select>
                        </div>
                        <h3 class="card-title">My <span id="heading">Latest</span> Campgrounds</h3>
                        <hr>
                        <% for(let camp in campgrounds) { %>
                            <div class="d-flex flex-row justify-content-start my-auto gap-4 campground flex-wrap <%=(camp === "latest") ? "" : " d-none" %>" id="<%=camp%>">
                                    <% for (let campground of campgrounds[camp]) { %>
                                        <% let campgroundBackgroundImageURL=(campground.images.length>0) ? (campground.images[0].url).substr(0, 49) + "/o_35/" + (campground.images[0].url).substr(49) : "" %>
                                            <div class="card view" style="background-image: url(<%=campgroundBackgroundImageURL%>); background-size: cover; min-width: 40%;">
                                                <div class="col d-flex flex-column justify-content-between">
                                                    <div class="row">
                                                        <div class="card-body d-flex flex-column px-4">
                                                            <h4 class="ms-auto"><i class="fa-solid fa-flip fa-star" style="color: #ffd700;"></i>
                                                                <%=campground.avgRating%> (<%=campground.reviews.length%>)
                                                            </h4>
                                                            <h1 class="card-title">
                                                                <%=campground.title%>
                                                            </h1>
                                                            <div class="card-text">
                                                                <small class="text-muted">
                                                                    <%=campground.location%>
                                                                </small>
                                                                <p class="mt-3">
                                                                    <b>Price:</b> Rs.
                                                                    <%=campground.price%>/-
                                                                </p>
                                                                <p class="mt-3 text-justify">
                                                                    <%= (campground.description) ? campground.description.slice(0, 100) + "..." : "" %>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row text-center pb-3 px-5">
                                                        <a href="/campgrounds/<%=campground._id%>" class="card-link btn btn-outline-dark btn-sm" title="View Campground">View</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                            </div>
                            <% } %>
                            <div class="row text-center mt-3 px-3">
                                <a href="/campgrounds?user=<%=user.username%>" class="btn btn-primary" title="View More">Click to View More</a>
                            </div>
                        <% } else { %>
                            <h3 class="card-title">My Campgrounds</h3>
                            <hr>
                            <%- include('../partials/NotFound') %>
                            <% } %>
                </div>
            </div>
        </div>
    </div>
    <script src="/JS/Hide-Show Password.js"></script>
    <% if(!error){ %>
        <script src="/JS/Sort Campgrounds.js"></script>
    <% } %>